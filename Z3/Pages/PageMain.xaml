<Page x:Class="Z3.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Z3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="195"></RowDefinition>
            </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnVisitor"
                Click="BtnVisitor_Click"
                Style="{StaticResource BtnMenu}">Visitor</Button>
            <Button x:Name="BtnAdmin"
                    Click="BtnAdmin_Click"
                    Style="{StaticResource BtnMenu}">Admin</Button>
            </StackPanel>
        </Grid>
</Page>
