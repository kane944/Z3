<Application x:Class="Z3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Z3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ColorMain" Color="#FF6995C2">
        </SolidColorBrush>
        <Style TargetType="Button" x:Key="BtnMenu">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="Background" Value="{StaticResource ColorMain}"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
        </Style>
    </Application.Resources>
</Application>
